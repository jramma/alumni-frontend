---
import FooterStacked from './FooterStacked.astro';
import LayoutInicio from './LayoutInicio.astro';
import NavBarStacked from './NavBarStacked.astro';
---

<LayoutInicio>
	<NavBarStacked />
	<div class="relative">
		<video src="/video.mp4" autoplay loop muted class="w-full h-full bg-gray-900 object-cover fixed overflow-hidden">
		</video>
		<div class="absolute inset-0 flex items-center justify-center">  </div>
	</div>
	<div class="flex pt-16 overflow-hidden bg-gray-50 dark:bg-gray-900">
		<div
			id="main-content"
			class="relative w-full max-w-screen-2xl mx-auto h-full overflow-y-auto bg-gray-50 dark:bg-gray-900 min-h-screen"
		>
			<div class="px-4 pt-6 2xl:px-0">
				<slot />
			</div>

			<FooterStacked />
		</div>
	</div>
</LayoutInicio>
